<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>quartz:config-file</param-name>
        <param-value>quartz.properties</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:shutdown-on-unload</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:wait-on-shutdown</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:start-scheduler-on-load</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:config-file</param-name>
        <param-value>/WEB-INF/quartz.properties</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>Servlets.EjecutarJobs</listener-class>
    </listener>
    <servlet>
        <servlet-name>Visualizacion</servlet-name>
        <servlet-class>Servlets.Visualizacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>Servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InformeSegPQRS</servlet-name>
        <servlet-class>Servlets.InformeSegPQRS</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ingreso</servlet-name>
        <servlet-class>Servlets.Ingreso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Acciones</servlet-name>
        <servlet-class>Servlets.Acciones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionArchivos</servlet-name>
        <servlet-class>Servlets.GestionArchivos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionCrearSolicitud</servlet-name>
        <servlet-class>Servlets.GestionCrearSolicitud</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Visualizacion</servlet-name>
        <url-pattern>/Visualizacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InformeSegPQRS</servlet-name>
        <url-pattern>/InformeSegPQRS</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Ingreso</servlet-name>
        <url-pattern>/Ingreso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Acciones</servlet-name>
        <url-pattern>/Acciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionArchivos</servlet-name>
        <url-pattern>/GestionArchivos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionCrearSolicitud</servlet-name>
        <url-pattern>/GestionCrearSolicitud</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
           60
        </session-timeout>
    </session-config>
</web-app>
